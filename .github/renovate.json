{
    "extends": [
        "config:js-lib"
    ],
    "prConcurrentLimit": 2,
    "semanticCommits": "enabled",
    "baseBranches": [
        "23_2",
        "23_1",
        "renovatebot-chrome-node"
    ],
    "labels": [
        "dependencies"
    ],
    "vulnerabilityAlerts": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "matchPackagePrefixes": [ "cldr-" ],
            "groupName": "CLDR"
        },
        {
            "matchPackagePatterns": [
                "^@devextreme-generator/"
            ],
            "enabled": false
        },
        {
            "matchPackageNames": [
                "@devextreme/runtime",
                "devexpress-gantt",
                "devexpress-diagram",
                "eslint-config-devextreme",
                "rrule",
                "sass-embedded",
                "sinon",
                "systemjs"
            ],
            "enabled": false
        },
        {
            "matchPackageNames": [ "typescript", "typescript-min" ],
            "matchUpdateTypes": [ "major", "minor" ],
            "enabled": false
        },
        {
            "matchPackagePatterns": [ "*" ],
            "excludePackagePrefixes": [ "cldr-" ],
            "matchUpdateTypes": [ "major" ],
            "dependencyDashboardApproval": true
        }
    ],
    "constraints": {
        "node": "^16.3.0"
    },
    "regexManagers": [
        {
            "fileMatch": ["^\\.github\\/.+\\.ya?ml$"],
            "matchStrings": ["#\\s*renovate:\\s*(dataSource=nodejs)?\\s*\\n\\s*node-version:\\s*(?<currentValue>.*)\\s"],
            "depNameTemplate": "chrome",
            "versioningTemplate": "semver-coerced",
            "datasourceTemplate": "custom.chrome"
        }
    ],
    "customDatasources": {
        "chrome": {
            "defaultRegistryUrlTemplate": "https://versionhistory.googleapis.com/v1/chrome/platforms/linux/channels/stable/versions",
            "transformTemplates": [
                "{ \"releases\": $.versions\n }"
            ]
        },
        "nodejs": {
            "defaultRegistryUrlTemplate": "https://nodejs.org/download/release/index.json",
            "transformTemplates": [
                "{ \"releases\": $ }"
            ]
        }
    }
}
